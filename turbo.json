{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "client#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["SENTRY_AUTH_TOKEN"],
      "cache": true
    },
    "server#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "GITHUB_CLIENT_SECRET_DEV",
        "GITHUB_CLIENT_SECRET_PROD",
        "BETTERSTACK_API_KEY"
      ],
      "cache": true
    },
    "@kasca/types#build": {
      "outputs": ["dist/**/*.d.ts", "dist/**/*.js"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "cache": true,
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:e2e:ui": {
      "cache": false
    },
    "test:server": {
      "cache": true,
      "outputs": ["test-results/**"]
    },
    "test:server:remote": {
      "cache": true,
      "outputs": ["test-results/**"]
    },
    "lint:check": {
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "format:check": {
      "cache": true
    },
    "format:fix": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
