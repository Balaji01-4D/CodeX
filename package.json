{
  "name": "kasca",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:client": "turbo build --filter=client...",
    "build:server": "turbo build --filter=server...",
    "lint:check": "turbo lint:check",
    "lint:fix": "turbo lint:fix",
    "format:check": "prettier --check **/*.{js,jsx,ts,tsx,json}",
    "format:fix": "prettier --write **/*.{js,jsx,ts,tsx,json}",
    "test:client": "turbo test:client",
    "test:client:ui": "turbo test:client:ui",
    "test:client:debug": "turbo test:client:debug",
    "test:client:report": "turbo test:client:report",
    "test:server": "turbo test:server",
    "test:server:remote": "turbo test:server:remote",
    "test:server:watch": "turbo test:watch",
    "clean": "turbo clean && rimraf node_modules"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/simple-peer": "^9.11.8",
    "prettier": "^3.4.2",
    "prettier-plugin-classnames": "^0.7.5",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  },
  "packageManager": "pnpm@9.15.3"
}
