{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "start": "nodemon -r tsconfig-paths/register src/index.ts",
    "build": "rimraf dist && tsc -p tsconfig.prod.json && tsc-alias -p tsconfig.prod.json && echo Server built successfully!",
    "format:check": "prettier . --c",
    "format:fix": "prettier . --w",
    "test:server": "jest --server=local",
    "test:server:remote": "jest --server=remote",
    "test:watch": "jest --server=local --watch"
  },
  "dependencies": {
    "@kasca/types": "workspace:*",
    "socket.io": "^4.8.1",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.51.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0"
  }
}
